#!/bin/sh -eu

if test $# -ne 1; then
    echo Usage: $0 BALANCE_CONFIG_JSON >&2
    echo >&2
    echo Reads standard input and outputs Icinga perfdata line >&2
    exit 3
fi

own="`dirname $0`"

jq -Rrsf "$own/balance_check.jq" --slurpfile conf "$1" -L "$own" | {
    read ret
    cat
    exit $ret
}
