#!/bin/sh -eu

. "`dirname $0`/perfdata.sh"

curl 'https://console.thethingsnetwork.org/api/gateways/eui-b827ebfffe787a5e' --compressed -H "Authorization: Bearer $bearer" |
    perfdata '.[0] | {last: {value: (now - (.status.time / 1e9) | floor), min:0, max: 3600, warn: 600, crit: 3600, unit:"s", msg: ["Online","Offline","Offline"]}, uplink: {value: .status.uplink}, downlink: {value: .status.downlink}}'
